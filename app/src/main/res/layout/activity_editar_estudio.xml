<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroBandaActivity"
    android:background="@drawable/background"
    android:padding="30dp"
    >

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:text="editar"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/hintColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />



        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nome"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPersonName"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Email"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textEmailAddress"

            android:layout_marginBottom="40dp"
            />


        <EditText
            android:id="@+id/et_senha_atual"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nova Senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/tv_esqueceu_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="esqueceu sua senha?"
            android:textColor="@color/colorAccent" />



        <EditText
            android:id="@+id/et_senha"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nova Senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_senha_conf"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Confirme a senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />


        <EditText
            android:id="@+id/et_rua"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Rua"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="40dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            >

            <EditText
                android:id="@+id/et_numero_rua"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="NÂ° rua"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />


            <EditText
                android:id="@+id/et_telefone"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="Telefone"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            >

            <EditText
                android:id="@+id/et_cep"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="CEP"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />


            <EditText
                android:id="@+id/et_estado"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="Estado"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/et_cidade"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Cidade"
            android:layout_weight="1"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="40dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            >

            <EditText
                android:id="@+id/et_bairro"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="Bairro"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />


            <EditText
                android:id="@+id/et_preco"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:hint="Preco $"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColorHint="@color/hintColor"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:background="@drawable/edittext_bg"
                />

        </LinearLayout>




        </LinearLayout>


    <Button
        android:id="@+id/bt_alterar_foto"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/button_bg"
        android:textAlignment="center"
        android:text="mudar foto de perfil"
        android:textColor="@color/hintColor"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/bt_add_foto"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/button_bg"
        android:textAlignment="center"
        android:text="Adicionar fotos"
        android:textColor="@color/hintColor"
        android:layout_marginBottom="20dp"
        />

        <Button
            android:id="@+id/bt_salvar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:text="Salvar"
            android:textColor="@color/hintColor"
            android:layout_marginBottom="20dp"
            />



</androidx.core.widget.NestedScrollView>