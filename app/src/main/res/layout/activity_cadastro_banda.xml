<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.integrador.apresentação.Interfaces.CadastroBandaActivity"
    android:background="@drawable/background"
    android:padding="30dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:text="cadastro"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/hintColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />



        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nome"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPersonName"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Email"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textEmailAddress"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_senha"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_senha_conf"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Confirme a senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            >

            <CheckBox
                android:id="@+id/cb_termos"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="false"
                android:text="Aceito os termos"
                android:textColor="@color/colorAccent"
                android:layout_margin="10dp"
                />

        <EditText
            android:id="@+id/et_qnt_integrantes"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_bg"
            android:hint="n° integrantes"
            android:textColor="@color/hintColor"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:inputType="number"
            />

        </LinearLayout>

        <Button
            android:id="@+id/bt_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:text="Cadastrar"
            android:textColor="@color/hintColor"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>

    





</androidx.core.widget.NestedScrollView>