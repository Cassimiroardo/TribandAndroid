<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.integrador.apresentação.Interfaces.EditarBandaActivity"
    android:background="@drawable/background"
    android:padding="30dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/edittext_bg"
        android:padding="10dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:text="Editar"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/hintColor"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />



        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nome"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPersonName"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Email"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textEmailAddress"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_senha_atual"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Senha Atual"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/tv_esqueceu_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="esqueceu sua senha?"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/et_senha"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Nova Senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_senha_conf"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:hint="Confirme a nova senha"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:background="@drawable/edittext_bg"
            android:inputType="textPassword"

            android:layout_marginBottom="40dp"
            />

        <EditText
            android:id="@+id/et_qnt_integrantes"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_bg"
            android:hint="n° integrantes"
            android:textColor="@color/hintColor"
            android:textColorHint="@color/hintColor"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:inputType="number"
            android:layout_marginBottom="35dp"
            />

        <Button
            android:id="@+id/bt_mudar_foto"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:text="Alterar foto"
            android:textColor="@color/hintColor"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/bt_salvar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/button_bg"
            android:textAlignment="center"
            android:text="Salvar"
            android:textColor="@color/hintColor"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>







</androidx.core.widget.NestedScrollView>